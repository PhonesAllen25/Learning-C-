// Lesson 6 - Using the While Loop function
// Lecture 6.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>


int main()
{
	double temp = 0;
	double sum = temp;
	char question = 'n';
	bool finished = false;

	while (!finished)
	{
		std::cout << "Enter a number: " << std::endl;
		std::cin >> temp;
		sum += temp;

		std::cout << "Would you like to input another number? Y or N: " << std::endl;
		std::cin >> question;

		if (question == 'n' || question == 'N')
		{
			finished = true;
		}

	};

	std::cout << "\nThe total of your numbers is: " << sum << std::endl;


	//pause code
	int pause;
	std::cin >> pause;

    return 0;
}
